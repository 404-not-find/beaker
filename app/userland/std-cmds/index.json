{
  "type": "webterm.sh/cmd-pkg",
  "title": "Standard Commands",
  "commands": [
    {
      "name": "ls",
      "help": "List files in the directory or information about a file",
      "usage": "ls"
    },
    {
      "name": "cd",
      "help": "Change the current directory",
      "usage": "cd {path}"
    },
    {
      "name": "pwd",
      "help": "Fetch the current directory",
      "usage": "pwd"
    },
    {
      "name": "mkdir",
      "help": "Make a new directory",
      "usage": "mkdir {path}"
    },
    {
      "name": "mv",
      "help": "Move a file or folder",
      "usage": "mv {src} {dst}"
    },
    {
      "name": "cp",
      "help": "Copy a file or folder",
      "usage": "cp {src} {dst}"
    },
    {
      "name": "rm",
      "help": "Remove a file or folder",
      "usage": "rm {path}"
    },
    {
      "name": "meta",
      "help": "Get/set metadata on a file or folder",
      "usage": "meta {path} [key] [value] [-d/--delete]",
      "options": [
        {
          "name": "delete",
          "abbr": "d",
          "help": "Delete the key value",
          "boolean": true,
          "default": false
        }
      ]
    },
    {
      "name": "mkgoto",
      "help": "Create a .goto file",
      "usage": "mkgoto {path} {href} [-t/--title title]",
      "options": [
        {
          "name": "title",
          "abbr": "t",
          "help": "Specify a title attribute on the .goto file"
        }
      ]
    },
    {
      "name": "peek",
      "help": "View the contents of a file into the terminal",
      "usage": "peek {path}"
    },
    {
      "name": "go",
      "help": "Go to the target in the browser",
      "usage": "go {path}",
      "options": [
        {
          "name": "new-tab",
          "abbr": "n",
          "help": "Open in a new tab",
          "boolean": true,
          "default": false
        }
      ]
    },
    {
      "name": "edit",
      "help": "Edit the target using the default editor",
      "usage": "edit {path}",
      "options": [
        {
          "name": "new-tab",
          "abbr": "n",
          "help": "Open in a new tab",
          "boolean": true,
          "default": false
        }
      ]
    },
    {
      "name": "soc",
      "help": "Social networking commands",
      "subcommands": [
        {
          "name": "ls",
          "help": "List the latest posts in your feed",
          "usage": "soc ls [-l] [-p {page=1}] [-n {num=10}]",
          "options": [
            {
              "name": "long",
              "abbr": "l",
              "help": "Lengthen the output",
              "boolean": true,
              "default": false
            },
            {
              "name": "page",
              "abbr": "p",
              "help": "Select which page of posts to show (1-indexed)",
              "default": 1
            },
            {
              "name": "num",
              "abbr": "n",
              "help": "How many posts to include in a page",
              "default": 10
            }
          ]
        },
        {
          "name": "post",
          "help": "Compose a new post",
          "usage": "soc post [-y] [-f {file}] [{body}]",
          "options": [
            {
              "name": "yes",
              "abbr": "y",
              "help": "Post immediately without reviewing first",
              "boolean": true,
              "default": false
            },
            {
              "name": "file",
              "abbr": "f",
              "help": "Use the content of the given file as the post-body (should be a text file)"
            }
          ]
        },
        {
          "name": "whoami",
          "help": "Output your profile",
          "usage": "whoami"
        },
        {
          "name": "whois",
          "help": "Output the specified user's profile",
          "usage": "whois {id}"
        },
        {
          "name": "graph",
          "help": "List follows/followers",
          "usage": "soc graph [{id}] [-m]",
          "options": [
            {
              "name": "mutual",
              "abbr": "m",
              "help": "List only mutually-following users"
            }
          ]
        },
        {
          "name": "follow",
          "help": "Follow a user",
          "usage": "soc follow {id}"
        },
        {
          "name": "unfollow",
          "help": "Unfollow a user",
          "usage": "soc unfollow {id}"
        },
        {
          "name": "home",
          "help": "Go to the home feed",
          "usage": "soc home [-n]",
          "options": [
            {
              "name": "new-tab",
              "abbr": "n",
              "help": "Open in a new tab",
              "boolean": true,
              "default": false
            }
          ]
        },
        {
          "name": "me",
          "help": "Go to your profile page",
          "usage": "soc me [-n]",
          "options": [
            {
              "name": "new-tab",
              "abbr": "n",
              "help": "Open in a new tab",
              "boolean": true,
              "default": false
            }
          ]
        },
        {
          "name": "view",
          "help": "View a profile, post, or comment",
          "usage": "soc view {num|url} [-n]",
          "options": [
            {
              "name": "new-tab",
              "abbr": "n",
              "help": "Open in a new tab",
              "boolean": true,
              "default": false
            }
          ]
        }
      ]
    }
  ]
}